.beer-container {
    display: none;
    position: absolute;
    top: 0;
    right: 0;
    width: 255px;
    height: 500px;
    z-index: 750;
    margin: 0;
    padding: 0;
    overflow: hidden;
    filter: alpha(opacity=70);
    filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
    -moz-opacity: 0.7;
    opacity: 0.7;
}

.beer-glass {
    z-index: 600;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    max-width: 255px;
    max-height: 500px;
    background: url(<%= image_path("bling/beer_o_clock/pint_overlay.png") %>) no-repeat center bottom;
    background-size: 100%;
}

.beer-fill {
    background: #ebbe32;
    z-index: 200;
    position: absolute;
    bottom: 0;
    width: 100%;
    max-height: 495px;

    -webkit-border-radius: 149px / 20px;
       -moz-border-radius: 149px / 20px;
            border-radius: 149px / 20px;    
}

.beer-head {
    background: #eee3da;
    z-index: 400;
    position: absolute;
    top: -1px;
    width: 100%;
    height: 12.5%;
  
    -webkit-border-radius: 149px / 20px;
       -moz-border-radius: 149px / 20px;
            border-radius: 149px / 20px;
}

/* Beer Bubbles */

.beer-bubbles {
    overflow: hidden;
    position: relative;
    width: 90%;
    height: 100%;
    margin: 0 auto;
}

.beer-bubble-container {
    opacity: 0;
    position: absolute;
    bottom: 10px;
  
    -webkit-animation: beerbubblerise 4s infinite ease-in;
       -moz-animation: beerbubblerise 4s infinite ease-in;
        -ms-animation: beerbubblerise 4s infinite ease-in;
            animation: beerbubblerise 4s infinite ease-in;
}

.beer-bubble-container:active .beer-bubble {
    border-color: rgba(255, 255, 255, 0.25);
    background: rgba(255, 255, 255, 0.15);
}

.beer-bubble {
    z-index: 250;
    width: 4px;
    height: 4px;
    margin: 0 auto;
    border: 1px solid rgba(255,255,255,0.75);
    background: rgba(255,255,255,0.05);
  
    -webkit-border-radius: 10px;
       -moz-border-radius: 10px;
            border-radius: 10px;
  
    -webkit-animation: beerbubblewobble 0.4s infinite linear;
       -moz-animation: beerbubblewobble 0.4s infinite linear;
        -ms-animation: beerbubblewobble 0.4s infinite linear;
            animation: beerbubblewobble 0.4s infinite linear;
}

/* Beer Bubble Animations */

@-webkit-keyframes beerbubblerise {
    0% {
        opacity: 0;
        bottom: 20px;
    }
    5% {
        opacity: 1;
        bottom: 20px;
    }
    99% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        bottom: 100%;
    }
}
@-moz-keyframes beerbubblerise {
    0% {
        opacity: 0;
        bottom: 20px;
    }
    5% {
        opacity: 1;
        bottom: 20px;
    }
    99% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        bottom: 100%;
    }
}
@-ms-keyframes beerbubblerise {
    0% {
        opacity: 0;
        bottom: 20px;
    }
    5% {
        opacity: 1;
        bottom: 20px;
    }
    99% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        bottom: 100%;
    }
}
@keyframes beerbubblerise {
    0% {
        opacity: 0;
        bottom: 20px;
    }
    5% {
        opacity: 1;
        bottom: 20px;
    }
    99% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        bottom: 100%;
    }
}

@-webkit-keyframes beerbubblewobble {
    0% {
        margin-left: 0;
    }
    50% {
        margin-left: 2px;
    }
}
@-moz-keyframes beerbubblewobble {
    0% {
        margin-left: 0;
    }
