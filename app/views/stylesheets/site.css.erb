/* cc_dashboard default styles */

@font-face {
    font-family: 'lcd';
    src: url('<%= asset_paths.compute_public_path("LCD-BOLD.TTF", "fonts") %>');
}

body {
    margin: 0;
    padding: 0;
    background: #000e0e;
    color: #fff;
    font: 30px helvetica,arial,sans-serif;
}

a {
    cursor: pointer;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h1 {
    display: none;
}

h2 {
    margin: 0;
    padding: 0;
    font-size: 0.55em;
}

p {
	margin: 0;
	padding: 0;
	font-size: 0.45em;
}

#main {
    border: 0px none;
    width: 99%;
}

#background-image {
    position: absolute;
    display: none;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

#alarm-clock {
    display: none;
    position: absolute;
    left: 20%;
    top: 20%;
    width: 60%;
    height: auto;
    padding: 20px;
    z-index: 100;
    color: #cccc00;
    background-color: #000;
    font: 200px 'lcd',sans-serif;
    text-align: center;
    border: 2px solid #c0c0c0;
    overflow: hidden;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
    border-radius: 15px;
    -o-box-shadow: 2px 2px 6px #000;
    -moz-box-shadow: 2px 2px 6px #000;
    -webkit-box-shadow: 2px 2px 6px #000;
    box-shadow: 2px 2px 6px #000;
}

#audio {
    display: none;
}

#error-msg {
    display: none;
    width: 99%;
    color: #fff;
    background: #ff0000;
    text-align: center;
    float: left;
    height: 100px;
    margin: 5px;
    position: relative;
    border: 2px solid #c0c0c0;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
    border-radius: 15px;
    -o-box-shadow: 2px 2px 6px #000;
    -moz-box-shadow: 2px 2px 6px #000;
    -webkit-box-shadow: 2px 2px 6px #000;
    box-shadow: 2px 2px 6px #000;
}

.project {
    color: #fff;
    text-align: center;
    width: 288px;
    height: 70px;
    float: left;
    margin: 5px;
    padding: 5px;
    position: relative;
    border: 2px solid #c0c0c0;
    overflow: hidden;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
    border-radius: 15px;
    -o-box-shadow: 2px 2px 6px #000;
    -moz-box-shadow: 2px 2px 6px #000;
    -webkit-box-shadow: 2px 2px 6px #000;
    box-shadow: 2px 2px 6px #000;
}

.project-name {
    font-weight: bold;
}

.Error {
    background: #882132;
    color: #fff;
}

.Exception.Building {
    background: #ff9933;
    color: #fff;
}
.Exception.CheckingModifications {
    background: #440000;
    color: #fff;
}
.Exception.Pending {
    background: #440000;
    color: #fff;
}
.Exception.Sleeping {
    background: #440000;
    color: #fff;
}
.Exception.Unknown {
    background: #440000;
    color: #fff;
}

.Failure.Building {
    background: #ff9933;
    color: #fff;
}
.Failure.CheckingModifications {
    background: #882132;
    color: #fff;
}
.Failure.Pending {
    background: #882132;
    color: #fff;
}
.Failure.Sleeping {
    background: #882132;
    color: #fff;
}
.Failure.Unknown {
    background: #882132;
    color: #fff;
}

.Success.Building {
    background: #ff9933;
    color: #040302;
}
.Success.CheckingModifications {
    background: #2bca5b;
    color: #040302;
}
.Success.Pending {
    background: #2bca5b;
    color: #040302;
}
.Success.Sleeping {
    font-size: 36px;
    background: #2bca5b;
    color: #040302;
}
.Success.Unknown {
    background: #2bca5b;
    color: #040302;
}

.Unknown.Building {
    background: #ff9933;
    color: #040302;
}
.Unknown.CheckingModifications {
    background: #707070;
    color: #040302;
}
.Unknown.Pending {
    background: #707070;
    color: #040302;
}
.Unknown.Sleeping {
    background: #707070;
    color: #040302;
}
.Unknown.Unknown {
    background: #707070;
    color: #040302;
}

.culprits {
    color: #000;
    background: #ffff00;
    font-size: 0.5em;
    position: absolute;
    top: 50%;
    width: 100%;
    -webkit-transform: rotate(15deg);
    -ms-transform: rotate(15deg);
    -o-transform: rotate(15deg);
    transform: rotate(15deg);
}
