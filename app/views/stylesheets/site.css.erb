/* cc_dashboard default styles */

@font-face {
    font-family: 'lcd';
    src: url('<%= asset_paths.compute_public_path("LCD-BOLD.TTF", "fonts") %>');
}

body {
    margin: 0;
    padding: 0;
    background: #000e0e;
    color: #fff;
    font: 30px helvetica,arial,sans-serif;
}

a {
    cursor: pointer;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h1 {
    display: none;
}

h2 {
    margin: 0;
    padding: 0;
    font-size: 0.7em;
}

p {
	margin: 0;
	padding: 0;
	font-size: 0.5em;
}

div {
    color: #fff;
    text-align: center;
    width: 300px;
    float: left;
    height: 100px;
    margin: 5px;
    position: relative;
    border: 2px solid #c0c0c0;
    overflow: hidden;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
    border-radius: 15px;
    -o-box-shadow: 2px 2px 6px #000;
    -moz-box-shadow: 2px 2px 6px #000;
    -webkit-box-shadow: 2px 2px 6px #000;
    box-shadow: 2px 2px 6px #000;
}

div.chuck-norris-fact.healthy {
	background: #2bca5b url(<%= image_path("bling/chuck-norris/healthy.png") %>) no-repeat bottom center;
	height: 316px;
	color: #040302;
}
div.chuck-norris-fact.building {
    background: #ff9933 url(<%= image_path("bling/chuck-norris/building.png") %>) no-repeat bottom center;
    height: 316px;
    color: #000;
}
div.chuck-norris-fact.sick {
    background: #882132 url(<%= image_path("bling/chuck-norris/sick.png") %>) no-repeat bottom center;
    height: 316px;
    color: #fff;
}

div.cheezburger {
    position: relative;
    width: 615px;
    height: 430px;
    border: none;
}
div.cheezburger img {
    position: absolute;
    top: 190px;
    left: 280px;
    border: none;
}

#main {
    border: 0px none;
    width: 99%;
    overflow: visible;
    -moz-border-radius: 0;
    -webkit-border-radius: 0;
    border-radius: 0;
    -o-box-shadow: none;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none;
}

#pageloaderror {
    margin: 100px 0 0 0;
    padding: 0;
    text-align: center;
    width: 100%;
    float: none;
}

#alarm-clock {
    display: none;
    position: absolute;
    left: 20%;
    top: 20%;
    width: 60%;
    height: auto;
    padding: 20px;
    z-index: 100;
    color: #cccc00;
    background-color: #000;
    font: 200px 'lcd',sans-serif;
}

#audio {
    display: none;
}

#error-msg {
    display: none;
    width: 99%;
    color: #fff;
    background: #ff0000;
}

.Error {
    background: #882132;
    color: #fff;
}

.Exception.Building {
    background: #ff9933;
    color: #fff;
}
.Exception.CheckingModifications {
    background: #440000;
    color: #fff;
}
.Exception.Pending {
