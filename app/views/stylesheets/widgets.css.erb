#widgets {
    font-size: 16px;
    text-align: center;
    clear: both;
    float: right;
    bottom: 0;
    right: 0;
    position: absolute;
    color: #fff;
    font-weight: 900;
    background-color: black;
    margin: 0;
    padding: 5px;
    filter: alpha(opacity=70);
    filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
    -moz-opacity: 0.7;
    opacity: 0.7;
}

#widgets p {
    font-size: 16px;
}

#weather-clock {
    float: left;
    position: relative;
}

#weather-clock ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

#weather-clock-date {
    float: left;
    margin: 10px 5px 0 0;
}

#weather-clock-time {
    font-size: 16px;
    font: 38px 'lcd', sans-serif;
    margin: 5px 0 5px 0;
    padding: 0;
}

#weather-clock-current {
    float: left;
    max-width: 180px;
    overflow: hidden;
}

#weather-clock-current table {
    font-size: 12px;
}

#weather-clock-current th {
    text-align: left;
}

#weather-clock-current td {
    text-align: right;
}

#weather-clock-forecast {
    float: left;
}

#weather-clock-forecast ul {
    display: block;
    float: left;
}

#weather-clock-forecast ul li.day-name {
    height: 20px;
    line-height: 20px;
}

.weather-icon {
    background: url('../widgets/weather-clock/weather-icon-sprite.png');
    height: 50px;
    width: 60px;
    font-size: 0;
}

.codenarc {
    text-align: center;
    max-width: 100px;
    float: left;
    position: relative;  
}

.codenarc th {
    text-align: left;
}

.codenarc td {
    padding-left: 20px;
    text-align: right;
}

.coverage-parent-container {
    float: left;
    margin: 0;
    padding: 0;
    position: relative;
}

.coverage-container {
    width: 120px;
    height: 120px;
    float: left;   
}

.coverage {
    height: 120px;
    width: 120px;
    position: relative;
    overflow: hidden;
    float: left;
}

.coverage .rotate {
    /* There are two .rotate divs - one for each half of the background */
    position: absolute;
    width: 120px;
    height: 120px;
    top: 0;
    left: 0;
}

.coverage .rotate.right {
    display: none;
    z-index: 11;
}

.coverage .bg, .coverage .front {
    width: 60px;
    height: 120px;
    position: absolute;
    top: 0;
}

.coverage .display {
    position: absolute;
    width: 120px;
    z-index: 20;
    text-align: center;
    top: 35px;
    left: 0;

    text-shadow: 4px 4px 5px #333333;
}

.coverage .bg.left {
    left: 0;
}

.coverage.red .bg.left {
    background: url(../widgets/code_coverage/bg_red.png) no-repeat left top;
}
.coverage.orange .bg.left {
    background: url(../widgets/code_coverage/bg_orange.png) no-repeat left top;
}
.coverage.green .bg.left {
    background: url(../widgets/code_coverage/bg_green.png) no-repeat left top;
}

.coverage .bg.right {
    left: 60px;
}

.coverage.red .bg.right {
    background: url(../widgets/code_coverage/bg_red.png) no-repeat right top;
}
.coverage.orange .bg.right {
    background: url(../widgets/code_coverage/bg_orange.png) no-repeat right top;
}
.coverage.green .bg.right {
    background: url(../widgets/code_coverage/bg_green.png) no-repeat right top;
}

.coverage .front.left {
    left: 0;
    z-index: 10;
}
