#widgets {
    clear: both;
    float: right;
    bottom: 0;
    right: 0;
    position: absolute;
    color: #fff;
    font-weight: 900;
    background-color: black;
    filter: alpha(opacity=70);
    filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
    -moz-opacity: 0.7;
    opacity: 0.7;
}

#weather-clock {
    font-size: 18px;
    text-align: center;
    float: left;
    margin: 5px;
    padding: 0;
    position: relative;
}

#weather-clock ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

#weather-clock-date {
    float: left;
    margin: 10px;
}

#weather-clock-time {
    font: 40px 'lcd', sans-serif;
    margin: 5px 0 5px 0;
    padding: 0;
}

#weather-clock-current {
    float: left;
    margin: 5px;
    padding: 0;
}

#weather-clock-current p {
    font-size: 18px;
}

#weather-clock-current table {
    font-size: 14px;
}

#weather-clock-current th {
    text-align: left;
}

#weather-clock-current td {
    text-align: right;
}

#weather-clock-forecast {
    float: left;
    margin: 5px;
    padding: 0;
}

#weather-clock-forecast ul {
    display: block;
    float: left;
}

#weather-clock-forecast ul li.day-name {
    height: 20px;
    line-height: 20px;
    font-size: 16px;
}

#weather-clock-forecast ul li.temp-high {
    font-size: 18px;
}

#weather-clock-forecast ul li.temp-low {
    font-size: 18px;
}

.weather-icon {
    background: url('../widgets/weather-clock/weather-icon-sprite.png');
    height: 50px;
    width: 60px;
    font-size: 0;
}

#cobertura-stats {
    font-size: 18px;
    text-align: center;
    float: left;
    margin: 5px;
    padding: 0;
    position: relative;
}

#cobertura-stats-line-rate {
    width: 170px;
    height: 120px;
    float: left;   
}

#cobertura-stats-branch-rate {
    width: 170px;
    height: 120px;
    float: left; 
}

#codenarc-stats {
    font-size: 18px;
    text-align: center;
    float: left;
    margin: 5px;
    padding: 5px;
    position: relative;  
}

#codenarc-stats th {
    text-align: left;
}

#codenarc-stats td {
    text-align: right;
}
