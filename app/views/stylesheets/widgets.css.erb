#widgets {
    overflow: hidden;
    font-size: 16px;
    text-align: center;
    clear: both;
    float: right;
    bottom: 0;
    right: 0;
    position: absolute;
    color: #fff;
    font-weight: 900;
    background-color: black;
    margin: 0;
    padding: 5px;
    filter: alpha(opacity=70);
    filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
    -moz-opacity: 0.7;
    opacity: 0.7;
}

#widgets p {
    font-size: 16px;
}

#weather-clock {
    float: left;
    position: relative;
}

#weather-clock ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

#weather-clock-date {
    float: left;
    margin: 10px 5px 0 0;
}

#weather-clock-time {
    font-size: 16px;
    font: 38px 'lcd', sans-serif;
    margin: 5px 0 5px 0;
    padding: 0;
}

#weather-clock-current {
    float: left;
    max-width: 175px;
    overflow: hidden;
}

#weather-clock-current table {
    font-size: 12px;
}

#weather-clock-current th {
    text-align: left;
}

#weather-clock-current td {
    text-align: right;
}

#weather-clock-forecast {
    float: left;
}

.weather-icon {
    background: url('../widgets/weather-clock/weather-icon-sprite.png');
    height: 50px;
    width: 60px;
}

.weather-icon-small {
    background: url('../widgets/weather-clock/weather-icon-sprite-small.png');
    height: 25px;
    width: 30px;
    font-size: 0;
}

.codenarc {
    text-align: center;
    max-width: 100px;
    float: left;
    position: relative;  
}

.codenarc th {
    text-align: left;
}

.codenarc td {
    padding-left: 20px;
    text-align: right;
}

.coverage-parent-container {
    float: left;
    margin: 0;
    padding: 0;
    position: relative;
}

.coverage-canvas {
    height: 100px;
    width: 100px;
    padding: 0 5px 0 5px;
    float: left;
}
